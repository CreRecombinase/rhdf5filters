#!/bin/sh

## use R to remove AVX2 references from BLOSC Makefile
"${R_HOME}/bin${R_ARCH_BIN}/Rscript.exe" -e \ 
            'lines <- gsub("@M?AVX2[A-Z_]*@", "", readLines("src/blosc/lib/blosc-1.16.3/Makefile.in"));
            lines <- gsub("@SSE2@", "-DSHUFFLE_SSE2_ENABLED", lines);
            writeLines(lines, con = "src/blosc/lib/blosc-1.16.3/Makefile");
            lines <- gsub("@M?AVX2[A-Z_]*@", "", readLines("src/blosc/Makefile.in"));
            lines <- gsub("@SSE2@", "-DSHUFFLE_SSE2_ENABLED", lines);
            writeLines(lines, con = "src/blosc/Makefile");'