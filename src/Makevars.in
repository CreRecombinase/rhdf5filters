LZF_LIB=@LZF_LIB@
#LZ4_LIB=@LZ4_LIB@


RHDF5_LIBS=$(shell echo 'Rhdf5lib::pkgconfig("PKG_C_LIBS")'|\
    "${R_HOME}/bin/R" --vanilla --slave)  
PKG_LIBS=$(RHDF5_LIBS) -Wl,-rpath=/tmp/ -L/tmp/ -llzf_filter

#expose headers in installed package include folder
USER_LIB_DIR = ${R_PACKAGE_DIR}/lib${R_ARCH}/

all: copying $(SHLIB)

#copy hdf5 library headers to package include
copying:
	mkdir -p "${USER_LIB_DIR}"
	cp ${LZF_LIB} ${USER_LIB_DIR}
	#cp ${LZ4_LIB} ${USER_LIB_DIR}
